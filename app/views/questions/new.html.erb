<div class="container">
  <%=  form_with url: subject_questions_path do |f| %>
    <%= f.hidden_field :billy, value: false %>
    <div class="form-group">
      <label for="docx-upload"></label>
      <%= f.file_field :docx, accept: '.docx', class: 'form-control-file', id: "docx-upload" %>
      <%= f.submit 'Upload docx', class: "btn btn-success" %>
    </div>
  <% end %>

  <% if current_user[:billy] %>
    <%=  form_with url: subject_questions_path do |f| %>
      <%= f.hidden_field :billy, value: true %>
      <div class="form-group">
        <label for="docx-upload-billy"></label>
        <%= f.file_field :docx, accept: '.docx', class: 'form-control-file', id: "docx-upload-billy" %>
        <%= f.submit 'Upload docx (Billy)', class: "btn btn-success" %>
      </div>
    <% end %>
  <% end %>
</div>
